{
  "name": "ehentai-helper",
  "version": "0.0.1",
  "description": "chrome extension ehentai-helper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf .turbo && turbo clean",
    "dev-server": "pnpm -F hmr build && pnpm -F hmr dev-server",
    "dev": "concurrently --kill-others \"cross-env __DEV__=true turbo dev --concurrency 20\" \"pnpm dev-server\"",
    "dev:firefox": "concurrently --kill-others \"cross-env __DEV__=true __FIREFOX__=true turbo dev --concurrency 20\" \"pnpm dev-server\"",
    "build": "turbo build",
    "build:firefox": "cross-env __FIREFOX__=true turbo build",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "prettier": "turbo prettier"
  },
  "type": "module",
  "dependencies": {
    "@nextui-org/react": "^2.3.6",
    "axios": "^1.7.2",
    "clsx": "^2.1.1",
    "framer-motion": "^11.2.6",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.12.11",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "8.53.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "turbo": "^1.13.3",
    "typescript": "5.2.2",
    "vite": "^5.2.11"
  },
  "packageManager": "pnpm@9.1.2",
  "engines": {
    "node": ">=18.12.0"
  },
  "workspaces": [
    "chrome-extension",
    "pages/*",
    "packages/*"
  ]
}
